html(charset='UTF-8')
    head
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous")
        title Players

    body
        .container
            .jumbotron
                h1.text-center Liste des joueurs
            table.table.table-striped
                thead
                    tr
                        th ID
                        th Name
                        th Email
                        th Actions
                tbody
                    tr
                    each item in results
                        td #{item.id}
                        td #{item.name}
                        td #{item.email}
                        td
                            button.btn.btn-primary(type='button') Editer
                            button.btn.btn-danger(type='button') Supprimer
                        tr