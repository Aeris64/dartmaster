html(charset='UTF-8')
    head
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous")
        title Player

    body
        .container
            .jumbotron
                h1.text-center Some Player
            table.table.table-striped
                thead
                    tr
                        th ID
                        th Name
                        th Email
                        th gameWin
                        th gameLose
                        th createdAt
                        th Actions
                tbody
                    tr
                    td #{result.id}
                    td #{result.name}
                    td #{result.email}
                    td #{result.gameWin}
                    td #{result.gameLose}
                    td #{result.createdAt}
                    td
                        button.btn.btn-primary(type='button') Editer
                        button.btn.btn-danger(type='button') Supprimer
                    tr